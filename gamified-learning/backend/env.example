PORT=5000
NODE_ENV=development
MONGO_URI=mongodb://127.0.0.1:27017/gamified-learning
CLIENT_URL=http://localhost:5173
# Comma separated override for multiple origins (takes precedence over CLIENT_URL)
CLIENT_URLS=http://localhost:5173,http://localhost:5174

# Auth
JWT_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-refresh-secret
JWT_EXPIRES_IN=1h
REFRESH_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email (optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your-user@example.com
MAIL_PASS=your-password

